<!DOCTYPE html>
<html
  lang="es"
  class="light-style layout-menu-fixed"
  dir="ltr"
  data-theme="theme-default"
  data-assets-path="../assets/"
  data-template="vertical-menu-template-free"
>
  <head>
    <%- include('../layout/cabecera') %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jscolor/2.4.5/jscolor.min.js"></script>

  </head>
  <body>
    <!-- <h1><%= title %></h1>
  <p>¡Bienvenido a tu aplicación Express con EJS!</p> -->
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">
        <%- include('./menuEvaluer') %>

        <!-- Layout container -->
        <div class="layout-page">
          <%- include('./navbarEvaluer') %>
<!-- Content -->

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card">
        <div style="display: flex; align-items: center;">
            <div>
                <h5 class="card-header">Lista Area</h5>
            </div>
            <div class="col-lg-4 col-md-6" style="margin-left: auto;">
                <div class="mt-3">
                  <!-- Button trigger modal -->
                  <button
                    type="button"
                    class="btn btn-primary"
                    data-bs-toggle="modal"
                    data-bs-target="#modalCenterP"
                  >
                    <i class="bx bx-plus"></i>
                  </button>
                  <!-- Modal -->
                   <%- include('../forms/formArea.ejs') %>
                   <!-- modal -->
                </div>
            </div>
        </div>
        <div class="table-responsive text-nowrap">
          <table class="table">
            <thead class="table-dark">
                <tr>
                <th>Area</th>
                <th>calificacion</th>
                <th>Creado por..</th>
                <th>Opciones</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                <% areas.forEach(area => { %>

                    <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong> <%= area.nombre %> </strong></td>
                        <td><span class="badge rounded-pill bg-label-secondary"> <%= area.promedio %> </span></td>
                        <td>  <%= area.id_creo %>   </td>
                        <td>    
                            <div class="dropdown">
                              <button class="m-1 btn" type="button" onclick="abrirModalEditar('<%= area._id %>')"
                                ><i class="bx bx-edit-alt me-1"></i> Edit</button>
                                <%- include('../forms/formEditarArea.ejs') %>
                                <a class="m-1" href="" onclick="confirmDeletion('<%= area._id %>'); return false;" style="color: inherit;"
                                ><i class="bx bx-trash me-1"></i> Delete</a
                                >
                            </div>
                        </td>
                        </tr>
                <% }) %>


            </tbody>
          </table>
        </div>
      </div>

</div>

  <!-- / Content -->
  <script>
    function confirmDeletion(id) {
      if (confirm('¿Estás seguro de que deseas eliminar esta Encuesta?')) {
        window.location.href = '/forms/eliminarArea/' + id;
      }
    }
    </script>
<!-- Content wrapper -->
</div>
<!-- / Layout page -->
</div>

<!-- Overlay -->
<div class="layout-overlay layout-menu-toggle"></div>
</div>
<!-- / Layout wrapper -->

<div class="buy-now">
<a
href="https://themeselection.com/products/sneat-bootstrap-html-admin-template/"
target="_blank"
class="btn btn-danger btn-buy-now"
>Upgrade to Pro</a
>
</div>

<%- include('../components/scriptsBody') %>
</body>
</html>