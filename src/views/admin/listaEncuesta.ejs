<!-- admin/listaUsuarios.ejs -->
<!DOCTYPE html>
<html lang="es" class="light-style layout-menu-fixed" dir="ltr" data-theme="theme-default" data-assets-path="../assets/"
  data-template="vertical-menu-template-free">

<head>
  <%- include('../layout/cabecera') %>
    <link rel="stylesheet" href="../assets/css/encuestasAdminStyles.css" />
</head>

<body>
  <!-- <h1><%= title %></h1>
  <p>¡Bienvenido a tu aplicación Express con EJS!</p> -->
  <!-- Layout wrapper -->
  <div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
      <%- include('../admin/menuAdmin') %>

        <!-- Layout container -->
        <div class="layout-page">
          <%- include('../admin/navbarAdmin') %>

            <!-- Content wrapper -->
            <div class="content-wrapper">
              <!-- Content -->

              <div class="container-xxl flex-grow-1 container-p-y">
                <div class="card">
                  <div style="display: flex; align-items: center;">
                    <div>
                      <h5 class="card-header">Lista Encuestas</h5>
                    </div>
                    <div class="col-lg-4 col-md-6" style="margin-left: auto;"">
                            <div class=" mt-3">
                      <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                        data-bs-target="#modalToggleNewEncuesta">
                        <i class="bx bx-plus"></i>
                      </button>
                      <!-- Modal -->
                      <%- include('../forms/formEncuesta.ejs') %>

                    </div>
                  </div>
                </div>
                <div class="table-responsive text-nowrap">
                  <table class="table">
                    <thead class="table-dark">
                      <tr>
                        <th>Nombre <br>Encuesta</th>
                        <th>Area</th>
                        <th>Creado por..</th>
                        <th>N° Pueden <br> responder</th>
                        <th>Fecha <br>Creada</th>
                        <th>Fecha <br>Terminar</th>
                        <th>Calificacion <br> Creadas</th>
                        <th>Opciones</th>
                      </tr>
                    </thead>
                    <!-- Al momento que el usuario conteste la encuenta este se estara promediando con los uaurios contestado de la area indicada -->
                    <tbody class="table-border-bottom-0">
                      <% encuestas.forEach( encuesta=> { %>
                        <tr>
                          <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>
                              <%= encuesta.nombre %>
                            </strong></td>
                          <td><span class="badge bg-label-color-hover-area me-1"
                              style="color: <%= encuesta.id_area.color_hover %>;">
                              <%= encuesta.id_area.nombre %>
                            </span>
                          </td>
                          <td>
                            <%= encuesta.id_encargado.nombre %>
                          </td>
                          <td>
                            <%= encuesta.cantidad %>
                          </td>
                          <td>
                            <%= encuesta.fecha_creada %>
                          </td>
                          <td>
                            <%= encuesta.fecha_limite %>
                          </td>
                          <td><i class="bx bx-star"></i>
                            <%= encuesta.calificacion %>
                          </td>
                          <td>
                            <div class="dropdown">
                              <button class="m-1 btn" type="button"
                                onclick="abrirModalEditarE('<%= encuesta._id %>')"><i class="bx bx-edit-alt me-1"></i>
                                Edit</button>
                              <!-- < % - include('../forms/formEditarEncuesta.ejs') % > -->
                                <a class="m-1" href="#" onclick="confirmDeletion('<%= encuesta._id %>'); return false;"
                                  style="color: inherit;"><i class="bx bx-trash me-1"></i> Delete</a>
                            </div>
                          </td>
                        </tr>
                        <% }) %>

                    </tbody>
                  </table>
                </div>
              </div>
            </div>
            <!-- / Content -->
            <%- include('../components/footer') %>
              <script>
                function confirmDeletion(id) {
                  if (confirm('¿Estás seguro de que deseas eliminar esta Encuesta?')) {
                    window.location.href = '/forms/eliminarEncuesta/' + id;
                  }
                }
              </script>
              <script>
                function abrirModalEditarE(idEncuesta) {
                  // Cargar los datos de la encuesta para editar
                  fetch(`/admin/listaEncuestaEdit/${idEncuesta}`)
                    .then(response => response.json())
                    .then(data => {
                      console.log('Datos de la encuesta'+data);
                      // Llenar el formulario con los datos de la encuesta
                      document.querySelector('#modalToggleEditarEncuesta #id').value = data.id;
                      document.querySelector('#modalToggleEditarEncuesta #nombre').value = data.nombre;
                      document.querySelector('#modalToggleEditarEncuesta #areaSelect').value = data.areaId;
                      document.querySelector('#modalToggleEditarEncuesta #fechat').value = data.fecha_limite;
                      /*const fechaFormateada = new Date(data.fecha_limite).toISOString().split('T')[0];
                      document.querySelector('#modalToggleEditarEncuesta #fechat').value = fechaFormateada;*/
                      document.querySelector('#modalToggleEditarEncuesta #canperson').value = data.cantidad;

                      new bootstrap.Modal(document.getElementById('modalToggleEditarEncuesta')).show();

                    })
                    .catch(error => {
                      console.error('Error al cargar los datos de la encuesta:', error);
                    });
                }
              </script>
              <div class="content-backdrop fade"></div>
        </div>
        <!-- Content wrapper -->
    </div>
    <!-- / Layout page -->
  </div>
  <!-- Overlay -->
  </div>


  <%- include('../components/scriptsBody') %>

</body>

</html>