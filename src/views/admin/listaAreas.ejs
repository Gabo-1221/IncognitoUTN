<!-- admin/listaUsuarios.ejs -->
<!DOCTYPE html>
<html
  lang="es"
  class="light-style layout-menu-fixed"
  dir="ltr"
  data-theme="theme-default"
  data-assets-path="../assets/"
  data-template="vertical-menu-template-free"
>
  <head>
    <%- include('../layout/cabecera') %>
  </head>
  <body>
    <!-- <h1><%= title %></h1>
  <p>¡Bienvenido a tu aplicación Express con EJS!</p> -->
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">
        <%- include('../admin/menuAdmin') %>

        <!-- Layout container -->
        <div class="layout-page">
          <%- include('../admin/navbarAdmin') %>

          <!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">
                <div class="card">
                    <div style="display: flex; align-items: center;">
                        <div>
                            <h5 class="card-header">Lista Area</h5>
                        </div>
                        <div class="col-lg-4 col-md-6" style="margin-left: auto;">
                            <div class="mt-3">
                              <!-- Button trigger modal -->
                              <button
                                type="button"
                                class="btn btn-primary"
                                data-bs-toggle="modal"
                                data-bs-target="#modalCenterP"
                              >
                                <i class="bx bx-plus"></i>
                              </button>
                              <!-- Modal -->
                               <%- include('../forms/formArea.ejs') %>
                               <!-- modal -->
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive text-nowrap">
                      <table class="table">
                        <thead class="table-dark">
                            <tr>
                            <th>Area</th>
                            <th>calificacion</th>
                            <th>Creado por..</th>
                            <th>Opciones</th>
                            </tr>
                        </thead>
                        <tbody class="table-border-bottom-0">
                            <% areas.forEach(area => { %>

                                <tr>
                                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong> <%= area.nombre %> </strong></td>
                                    <td><span class="badge rounded-pill bg-label-secondary"> <%= area.promedio %> </span></td>
                                    <td>  <%= area.id_creo %>   </td>
                                    <td>    
                                        <div class="dropdown">
                                            <a class="m-1" href="" style="color: inherit;"
                                            ><i class="bx bx-edit-alt me-1"></i> Edit</a
                                            >
                                            <a class="m-1" href="" onclick="confirmDeletion('<%= area._id %>'); return false;" style="color: inherit;"
                                            ><i class="bx bx-trash me-1"></i> Delete</a
                                            >
                                        </div>
                                    </td>
                                    </tr>
                            <% }) %>


                        </tbody>
                      </table>
                    </div>
                  </div>

            </div>
            <!-- / Content -->
            <script>
              function confirmDeletion(id) {
                if (confirm('¿Estás seguro de que deseas eliminar esta Area?')) {
                  window.location.href = '/forms/eliminarArea/' + id;
                }
              }
            </script>
            <!-- <%- include('../components/footer') %> -->

            <div class="content-backdrop fade"></div>
          </div>
          <!-- Content wrapper -->
        </div>
        <!-- / Layout page -->
      </div>

      <!-- Overlay -->
    
    </div>


    <%- include('../components/scriptsBody') %>
  </body>
</html>
